{
  "title": "LLC Overview",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 2,
  "refresh": "30s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Search Request Rate",
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "sum(rate(llc_search_requests_total[5m]))",
          "legendFormat": "requests/s",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Search Error Rate",
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "sum(rate(llc_search_requests_total{status=\"error\"}[5m]))",
          "legendFormat": "errors/s",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "p95 Search Latency (s)",
      "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(llc_search_total_latency_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Ingest Rate (chunks/s)",
      "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "sum(rate(llc_ingest_chunks_total[5m]))",
          "legendFormat": "chunks/s",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Postgres DB Size (bytes)",
      "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "pg_database_size_bytes{datname=\"registry\"}",
          "refId": "A"
        }
      ],
      "options": {"reduceOptions": {"calcs": ["lastNotNull"]}}
    },
    {
      "type": "stat",
      "title": "Backup Age (seconds)",
      "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "time() - llc_backup_last_success_timestamp",
          "refId": "A"
        }
      ],
      "options": {"reduceOptions": {"calcs": ["lastNotNull"]}}
    },
    {
      "type": "table",
      "title": "Service Health",
      "gridPos": {"x": 0, "y": 24, "w": 24, "h": 8},
      "targets": [
        {
          "expr": "up",
          "refId": "A"
        }
      ]
    }
  ]
}
